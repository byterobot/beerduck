name: Rust

on:
  push:
    branches: [ "master" ]
    tags: ["v[0-9]+.[0-9]+.[0-9]+*"]
  pull_request:
    branches: [ "master" ]

env:
  CARGO_TERM_COLOR: always

jobs:
  build:

    runs-on: macos-latest

    steps:
    - uses: actions/checkout@v3
    - name: Install target
      run: rustup update && rustup target add x86_64-apple-darwin aarch64-apple-darwin
    - name: Build x86_64
      run: cargo build --release --target=x86_64-apple-darwin
    - name: Build ARM
      run: cargo build --release --target=aarch64-apple-darwin
    - name: Move app
      run: |
        mv ./target/x86_64-apple-darwin/release/app ./app-x86_64-apple-darwin
        mv ./target/aarch64-apple-darwin/release/app ./app-aarch64-apple-darwin
